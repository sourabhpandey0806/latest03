pipeline {
  agent any
  
  environment {
    AWS_REGION            = 'ap-south-1'
    S3_BUCKET_NAME        = 'jenkinsartifacts23'
  }
  
  stages {
    stage('Build') {
      steps {
        sh 'mvn --version'
        sh 'mvn clean package'
        
      }
      post {
        success {
          archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
        }
      }
    }
    
    stage('Deploy') {
      steps {
       
          sh "aws s3 cp **/target/*.war s3://${env.S3_BUCKET_NAME}/"
        }
      
    }
  }
}
