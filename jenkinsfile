pipeline {
  agent any
  
  environment {
    AWS_REGION            = 'ap-south-1'
    S3_BUCKET_NAME        = 'jenkinsartifacts23'
  }
  
  stages {
    stage('Build') {
      steps {
        sh 'mvn --version'
        sh 'mvn clean package'
        
      }
      post {
        success {
          archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
        }
      }
    }
    
    stage('Upload to AWS') {
              steps {
                  withAWS(region:'ap-south-1',credentials:'credentials') {
                  sh 'echo "Uploading content with AWS creds"'
                      s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file:'target/calc.war', bucket:'jenkinsartifacts23')
                  }
              }
         }
  }
}
